package graficos;

import javax.swing.*;

public class CreandoMarcos {

	public static void main(String[] args) {
		
		miMarco Marco1 = new miMarco ();
		
		Marco1.setVisible(true);
		
		Marco1.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

	}

}

class miMarco extends JFrame {
	
	public miMarco () {
		setSize(300, 500);
		 
		setLocation (300, 300);
		
	}
	
}